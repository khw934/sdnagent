[Unit]
Description=OneCloud Eipgw service
Documentation=https://docs.yunion.cn
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/sbin/keepalived -f /etc/keepalived/eipgw.conf --vrrp --dont-fork
WorkingDirectory=/
KillMode=control-group
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
